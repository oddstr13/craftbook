<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <includeBaseDirectory>false</includeBaseDirectory>

  <id>dist</id>

  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>

  <files>
    <file>
<!--
      <source>${project.build.directory}/${artifactId}-${project.version}.jar</source>
-->
      <source>craftbook-common/target/craftbook-common-0.0.0-SNAPSHOT.jar</source>
      <destName>CraftBook.jar</destName>
      <outputDirectory>/</outputDirectory>
      <filtered>false</filtered>
    </file>

    <file>
      <source>craftbook-circuits/target/craftbook-circuits-0.0.0-SNAPSHOT.jar</source>
      <destName>CraftBookCircuits.jar</destName>
      <outputDirectory>/</outputDirectory>
      <filtered>false</filtered>
    </file>

    <file>
      <source>craftbook-mechanisms/target/craftbook-mechanisms-0.0.0-SNAPSHOT.jar</source>
      <destName>CraftBookMechanisms.jar</destName>
      <outputDirectory>/</outputDirectory>
      <filtered>false</filtered>
    </file>

    <file>
      <source>craftbook-vehicles/target/craftbook-vehicles-0.0.0-SNAPSHOT.jar</source>
      <destName>CraftBookVehicles.jar</destName>
      <outputDirectory>/</outputDirectory>
      <filtered>false</filtered>
    </file>

    <file>
      <source>README.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>

  </files>

  <fileSets>
    <fileSet>
      <includes>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
        <include>PERLSTONE-v1.0.txt</include>
        <include>CHANGELOG.txt</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
